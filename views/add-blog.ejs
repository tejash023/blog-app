  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/texteditor.css">
 
  <!-- Include the Quill library -->
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>


  <div class="container">
    <div class="heading-content">
      <h1>Add you blog here!</h1>
      
    </div>
  
    
      <form action="/add-blog" method = "post" class="add-blog-section">
        <input name="blogTitle" type="text" class="add-blog-title" placeholder="Add Blog Title" required>
        
        <div id="editor">
          
        </div>
        <input type="hidden" name="blogContent" id="quill-html" required>
        
        <p>By <%= user.name %></p>
        <button type="submit" class="add-blog-submit">Submit Blog</button> 
      </form>
    
  
  </div>
  
  
<script src="/js/app.js"></script>


